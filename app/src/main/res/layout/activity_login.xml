<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA914D">

    <TextView
        android:id="@+id/termosTextV"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="#FA914D"
        android:gravity="center"
        android:text="Ao entrar na Diversa In, você concorda com nossos Termos e Política de Privacidade"
        android:textColor="#F4EDE5"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992"
        tools:textColorHighlight="#264653" />

    <EditText
        android:id="@+id/entrarText"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:background="@drawable/curved_edittext_background"
        android:gravity="center"
        android:text="Entrar"
        android:textColor="#264653"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <EditText
        android:id="@+id/senhaTextE"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:background="@drawable/curved_edittext_background"
        android:gravity="center_vertical"
        android:text="    Senha"
        android:textColor="#264653"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <TextView
        android:id="@+id/esqueciTextV"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:background="#FA914D"
        android:gravity="center"
        android:text="Esqueci a senha"
        android:textColor="#E9C46A"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <EditText
        android:id="@+id/usuarioTextE"
        android:layout_width="287dp"
        android:layout_height="58dp"
        android:background="@drawable/curved_edittext_background"
        android:gravity="center_vertical"
        android:text="    Usuário ou e-mail"
        android:textColor="#264653"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <TextView
        android:id="@+id/LOGIN"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:background="#FA914D"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#F4EDE5"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

</androidx.constraintlayout.widget.ConstraintLayout>